<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iowner.eva1_4_eventos.Principal">

    <TextView
        android:id="@+id/txtV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnXML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="MiClick"
        android:text="Por XML" />

    <Button
        android:id="@+id/btnInterfaz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POR INTERFAZ" />

    <Button
        android:id="@+id/btnAnonima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POR CLASE ANONIMA" />

    <Button
        android:id="@+id/btnPorclase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="MiiClick"
        android:text="POR CLASE" />
</LinearLayout>
