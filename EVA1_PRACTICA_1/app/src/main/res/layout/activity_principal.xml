<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal">

    <TextView
        android:id="@+id/TxtVC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="CafeterÃ­a" />

    <RadioGroup
        android:id="@+id/RGC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbAmeric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Americano ($20)" />

        <RadioButton
            android:id="@+id/rbCapu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capuchino ($48)" />

        <RadioButton
            android:id="@+id/rbExpres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expresso ($30)" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TxtVCa"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Cantidad:" />

        <EditText
            android:id="@+id/edT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese la cantidad de pedidos"
            android:inputType="number"
            android:text="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TxtVE"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="Extras:" />

        <CheckBox
            android:id="@+id/cbAzucar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Azucar ($1)" />

        <CheckBox
            android:id="@+id/cbCrem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Crema ($1)" />

        <TextView
            android:id="@+id/TxtVCom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion de la compra " />

        <TextView
            android:id="@+id/TxtVComR"
            android:layout_width="match_parent"
            android:layout_height="41dp" />

        <Button
            android:id="@+id/btT"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:text="Total " />

    </LinearLayout>

</LinearLayout>